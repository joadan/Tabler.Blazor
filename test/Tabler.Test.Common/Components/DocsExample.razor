<h2>@Title</h2>
@Description
<div class="example no_toc_section example-bg @(Centered ? "example-centered" : "") @Class">
    <div class="example-content">
        <div class="example-column @(Columns > 0 ? $"example-column-{Columns}" : "")">
            @Example
        </div>
    </div>
</div>
<div class="example-code">
    <figure class="highlight">
        <pre><code class="language-html" data-lang="html">@Example.ToString()</code></pre>
    </figure>
</div>

@code {
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public RenderFragment Description { get; set; }

    [Parameter]
    public RenderFragment Example { get; set; }

    [Parameter]
    public int Columns { get; set; } = 0;

    [Parameter]
    public bool Centered { get; set; }

    [Parameter]
    public string Class { get; set; }

}